    <ul>
      <li class="active">
        <a href="/" title="主页"><i class="fa fa-lg fa-fw fa-home"></i> <span class="menu-item-parent">主页</span></a>
      </li>
      <li>
        <a href="/profile"><i class="fa fa-lg fa-fw fa-book"></i> <span class="menu-item-parent">个人信息</span></a>
      </li>

      <!--用户管理，只有具有管理员权限的用户才显示-->
      <% if(user.isAdmin === true){ %>
      <li>
        <a href="/user"><i class="fa fa-lg fa-fw fa-user"></i> <span class="menu-item-parent">用户管理</span></a>
      </li>
      <% } %>

      <!--各项目管理-->
      <% if(user.authority.engprojControl.visible === true){ %>
      <li>
        <a href="/engineeringproj"><i class="fa fa-lg fa-fw fa-wrench"></i> <span
            class="menu-item-parent">工程公司项目管理</span></a>
      </li>
      <% } %>

      <% if(user.authority.netprojControl.visible === true){ %>
      <li>
        <a href="/netproj"><i class="fa fa-lg fa-fw fa-signal"></i> <span class="menu-item-parent">网络部项目管理</span></a>
      </li>
      <% } %>

      <% if(user.authority.citygovprojControl.visible === true){ %>
      <li>
        <a href="/citygovproj"><i class="fa fa-lg fa-fw fa-home"></i> <span class="menu-item-parent">市政项目管理</span></a>
      </li>
      <% } %>

    </ul>
  </nav>
  <span class="minifyme"> <i class="fa fa-arrow-circle-left hit"></i> </span>

</aside>


