<div id="shortcut">
  <ul>

    <% if(user.authority.engprojControl.visible === true){ %>
    <li>
      <a href="/engineeringproj" class="jarvismetro-tile big-cubes bg-color-purple"> <span class="iconbox"> <i
            class="fa fa-wrench fa-4x"></i> <span>工程公司项目管理</span> </span> </a>
    </li>
    <% } %>

    <% if(user.authority.netprojControl.visible === true){ %>
    <li>
      <a href="/netproj" class="jarvismetro-tile big-cubes bg-color-blueDark"> <span class="iconbox"> <i
            class="fa fa-signal fa-4x"></i> <span>网络部项目管理 <span class="label pull-right bg-color-darken"></span></span> </span>
      </a>
    </li>
    <% } %>

    <% if(user.authority.citygovprojControl.visible === true){ %>
    <li>
      <a href="/citygovproj" class="jarvismetro-tile big-cubes bg-color-greenLight"> <span class="iconbox"> <i
            class="fa fa-home fa-4x"></i> <span>市政项目管理 </span> </span> </a>
    </li>
    <% } %>

    <li>
      <a href="/profile" class="jarvismetro-tile big-cubes selected bg-color-pinkDark"> <span
          class="iconbox"> <i class="fa fa-user fa-4x"></i> <span>个人信息 </span> </span> </a>
    </li>
  </ul>
</div>
<!-- END SHORTCUT AREA -->
<!-- HEADER -->
<header id="header">
  <div id="logo-group">

    <!-- PLACE YOUR LOGO HERE -->
        <span id="logo"> <!-- <img src="img/logo_mksoft.png" alt="MKsoft" style="height:35px;width:35px"> --><span
            style="font-size: 30px;text-shadow:0 0 1px #fff;color:#bfbfbf;position:absolute; ">   </span> </span>
    <!-- END LOGO PLACEHOLDER -->

  </div>


  </div>
  <!-- end projects dropdown -->

  <!-- pulled right: nav area -->
  <div class="pull-right">

    <!-- collapse menu button -->
    <div id="hide-menu" class="btn-header pull-right">
      <span> <a href="javascript:void(0);" title="Collapse Menu"><i class="fa fa-reorder"></i></a> </span>
    </div>
    <!-- end collapse menu -->

    <!-- logout button -->
    <div id="logout" class="btn-header transparent pull-right">
      <span> <a href="/logout" title="登出"><i class="fa fa-sign-out"></i></a> </span>
    </div>
    <!-- end logout button -->

    <!-- search mobile button (this is hidden till mobile view port) -->
    <div id="search-mobile" class="btn-header transparent pull-right">
      <span> <a href="javascript:void(0)" title="Search"><i class="fa fa-search"></i></a> </span>
    </div>
    <!-- end search mobile button -->

    <!-- input: search field -->

    <!-- end input: search field -->

    <!-- multiple lang dropdown : find all flags in the image folder -->

    <% if(user.authority.engprojControl.visible === true || user.authority.netprojControl.visible === true || user.authority.citygovprojControl.visible === true){ %>
    <form action="#search.html" class="header-search pull-right">
      <input type="text" placeholder="输入项目相关信息" id="search-fld">
      <button type="submit" id="searchProjByInfo">
        <i class="fa fa-search"></i>
      </button>
      <a href="javascript:void(0);" id="cancel-search-js" title="Cancel Search"><i class="fa fa-times"></i></a>
    </form>
    <ul class="header-dropdown-list hidden-xs">
      <li>
        <% if(user.authority.engprojControl.visible === true){ %>
        <a href="#" class="dropdown-toggle fa fa-search" data-toggle="dropdown" id="projTypeToSearch"
           data-proj="engineeringproj"> <span>工程公司项目</span>
          <% } else if(user.authority.netprojControl.visible === true){ %>
          <a href="#" class="dropdown-toggle fa fa-search" data-toggle="dropdown" id="projTypeToSearch"
             data-proj="netproj"> <span>网络部项目</span>
            <% } else { %>
            <a href="#" class="dropdown-toggle fa fa-search" data-toggle="dropdown" id="projTypeToSearch"
               data-proj="citygovproj"> <span>市政项目</span>
              <% } %>

              <i class="fa fa-angle-down"></i> </a>
            <ul class="dropdown-menu pull-right">

              <% if(user.authority.engprojControl.visible === true){ %>
              <li>
                <a class="fa fa-wrench projTypeForSearch" href="javascript:void(0);"
                   data-proj="engineeringproj">工程公司项目</a>
              </li>
              <% } %>
              <% if(user.authority.netprojControl.visible === true){ %>
              <li>
                <a class="fa fa-signal projTypeForSearch" href="javascript:void(0);" data-proj="netproj">网络部项目</a>
              </li>
              <% } %>
              <% if(user.authority.citygovprojControl.visible === true){ %>
              <li>
                <a class="fa fa-home projTypeForSearch" href="javascript:void(0);" data-proj="citygovproj">市政项目</a>
              </li>
              <% } %>

            </ul>
      </li>
    </ul>
    <% } %>
    <!-- end multiple lang -->

  </div>
  <!-- end pulled right: nav area -->

</header>
<!-- END HEADER -->

<!-- Left panel : Navigation area -->
<!-- Note: This width of the aside area can be adjusted through LESS variables -->
<aside id="left-panel">

  <!-- User info -->
  <div class="login-info">
				<span> <!-- User image size is adjusted inside CSS, it should stay as it --> 
					
					<a href="javascript:void(0);" id="show-shortcut">
            <% if(user.hasPortrait === false || user.hasPortrait === undefined){ %>
            <img src="images/portrait/default.png" alt="me" class="online portrait"/>
            <% }else{ %>
            <img
              src="images/portrait/<% if(user._id === null || user._id === undefined){ %> <% }else{ %> <%= user._id %> <% } %>.png"
              alt="me" class="online portrait"/>
            <% } %>
            <span>
              <% if (user) { %>
              您好, <%= user.name %>
              <% } else { %>
              匿名用户
              <% } %>
            </span>
            <i class="fa fa-angle-down"></i>
          </a>
					
				</span>
  </div>
  <!-- end user info -->

